<div class="container">
  <div class="article-share-mob">
      {%- if section.settings.show_share_buttons -%}
        <div class="share-buttons gap-3 m-share_cuss">
          {%- assign share_label = 'general.social.share' | t -%}
          {%- assign share_url = shop.url | append: article.url -%}

          {% comment %} <button class="button button--subdued button--lg w-full h-stack gap-3 align-center justify-center sm:hidden" is="share-button" style="--button-background: 0 0 0 / 0" share-url="{{ share_url | escape }}" share-title="{{ article.title | escape }}">
            {%- render 'icon' with 'share', with: 18, height: 18 -%}
            {{- 'general.social.share' | t -}}
          </button> {% endcomment %}

          <span class="bold">分享</span>

          <ul class="h-stack h-stack-m gap-3" role="list">
           <!-- 
            <li><a href="{% render 'share-link', host: 'twitter', title: article.title, url: article.url %}" class="share-buttons__item" aria-label="{{ 'general.social.share_on' | t: social_media: 'Twitter' }}">{%- render 'icon' with 'twitter', width: 24, height: 24 -%}</a></li>
            <li><a href="{% render 'share-link', host: 'pinterest', title: article.title, url: article.url %}" class="share-buttons__item" aria-label="{{ 'general.social.share_on' | t: social_media: 'Pinterest' }}">{%- render 'icon' with 'pinterest', width: 24, height: 24 -%}</a></li>
            <li><a href="{% render 'share-link', host: 'email', title: article.title, url: article.url %}" class="share-buttons__item" aria-label="{{ 'general.social.share_email' | t }}">{%- render 'icon' with 'email' -%}</a></li>
                   -->
            <!-- <li><a href="{% render 'share-link', host: 'copy-link', title: article.title, url: article.url %}" class="share-buttons__item" aria-label="{{ 'general.social.share_email' | t }}">{%- render 'icon' with 'copy-link' -%}</a></li> -->
             <li><button class="clipboard share-buttons__item">{%- render 'icon' with 'copy-link' -%}</button></li> 
            <li><a href="{% render 'share-link', host: 'facebook-m', title: article.title, url: article.url %}" class="share-buttons__item" aria-label="{{ 'general.social.share_on' | t: social_media: 'facebook-m' }}">
        {%- render 'icon' with 'facebook-m', width: 24, height: 24 -%}
            </a></li>
            <li><a href="{% render 'share-link', host: 'line', title: article.title, url: article.url %}" class="share-buttons__item" aria-label="{{ 'general.social.share_on' | t: social_media: 'line' }}">{%- render 'icon' with 'line', width: 24, height: 24 -%}</a></li>

        </ul>


          
        </div>
    
      {%- endif -%}
       <div class="copy_no desktop_no">
        <p id="copy-notification">地址已複製</p>
       </div>
       <div class="copy_no mobile_no">
        <p id="copy-notificationn">地址已複製</p>
       </div>
   </div>
</div>
{% schema %}
  {
    "name": "Social sharing",
    "settings": [
      {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show share buttons",
      "default": true
    }
    ],
    "presets": [
    {
      "name": "Social sharing"
    }
  ]
    
  }
   
{% endschema %}