{% if page %}
<div class="not-found">
  <div class="prose text-center" ddts {{ page }}>
    <h2 class="h4">{{ '404.general.title' | t }}</h2>
    {%- capture button_content -%}{{ '404.general.continue_shopping' | t }}{%- endcapture -%}
    {%- render 'button', content: button_content, href: routes.all_products_collection_url, size: 'xl' -%}
  </div>
</div>
 {% else %}
  <div class="not-found">
  <div class="prose text-center" ddts {{ page }}>
    <h2 class="h4">{{ '404.general.title' | t }}</h2>
    {%- capture button_content -%}{{ '404.general.continue_shopping' | t }}{%- endcapture -%}
    {%- render 'button', content: button_content, href: routes.all_products_collection_url, size: 'xl' -%}
  </div>
</div>
{% endif %}
{% schema %}
{
  "name": "404",
  "class": "shopify-section--404",
  "tag": "section"
}
{% endschema %}