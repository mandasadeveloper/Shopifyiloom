  var newWindowWidth = window.innerWidth;
   if (newWindowWidth < 768) {
document.querySelector('.m-js-load-more').addEventListener('click', function () {
    var thisElement = this;
    var totalPages = parseInt(document.querySelector('[data-all-pages]').value);
    var currentPage = parseInt(document.querySelector('[data-this-page]').value);
    var datacollurl = document.querySelector('[data-coll-url]').value;
    thisElement.setAttribute('disabled', true);
    thisElement.querySelector('[load-more-text]').classList.add('hide');
    thisElement.querySelector('[loader]').classList.remove('hide');
    var nextUrl = document.querySelector('[data-next-link]').value;
    var current_page_new = currentPage + 1;
    var next_coll = currentPage + 2;

    var xhr = new XMLHttpRequest();
    xhr.open('GET', nextUrl, true);
    xhr.onreadystatechange = function () {
        if (xhr.readyState === 4 && xhr.status === 200) {
            document.querySelector('[data-next-link]').value = datacollurl + "?page=" + next_coll;
            document.querySelector('[data-this-page]').value = current_page_new;

            var tempDiv = document.createElement('div');
            tempDiv.innerHTML = xhr.responseText;
            var newContent = tempDiv.querySelector('.blog-post-card').innerHTML;

            document.querySelector('.blog-post-card').insertAdjacentHTML('beforeend', newContent);
        }
    };

    xhr.onloadend = function () {
        if (current_page_new < totalPages) {
            thisElement.removeAttribute('disabled');
            thisElement.querySelector('[load-more-text]').classList.remove('hide');
            thisElement.querySelector('[loader]').classList.add('hide');
        }

        if (current_page_new >= totalPages) {
            thisElement.querySelector('[load-more-text]').textContent = 'Products Finished';
            thisElement.querySelector('[load-more-text]').classList.remove('hide');
            thisElement.querySelector('[loader]').classList.add('hide');
        }
    };

    xhr.send();
});
     }
