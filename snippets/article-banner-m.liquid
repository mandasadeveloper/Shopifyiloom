{%- comment -%}
----------------------------------------------------------------------------------------------------------------------
ARTICLE BANNER COMPONENT
----------------------------------------------------------------------------------------------------------------------
Shows the blog post image with blog post summary on blog post details page. The snippet automatically adjust the image positioning based on its aspect ratio.

********************************************
Supported parameters
********************************************

* show_date
* show_author
* show_comments_count
* layout
{%- endcomment -%}

<div class="m-article-banner article-banner {% if layout == 'image_text_overlay' %}sm:justify-items-center sm:align-items-center{% endif %}">
  <div class="article-banner__content text-custom container">


  {%- for tag in article.tags -%}
{% if tag contains "tab_" %}
  {% assign spli_tag_url = tag %}
{% assign spli_tag = tag | split: 'tab_'  %}
  <!-- {{  spli_tag }}
  {{ spli_tag_url }} -->
 {% endif %}
    {%- endfor -%}
    {%- if article.tags.size > 0 -%}
      <a href="{{ blog.url }}/tagged/{{ spli_tag_url | handle }}" class="badge bold text-sm">{{- spli_tag -}}</a>
    {%- endif -%}



    
  
    <h1 class="h0">{{- article.title -}}</h1>

    <!-- <div class="article__meta text-sm">
      {%- if show_date -%}
        <p class="text-with-icon link-faded">
          {%- render 'icon' with 'blog-date' -%} <time>{{- article.published_at | date: format: 'abbreviated_date' -}}</time>
        </p>
      {%- endif -%}

      {%- if show_author -%}
        <p class="text-with-icon link-faded">
          {%- render 'icon' with 'blog-author' -%} {{- 'blog.post.written_by' | t: author: article.author -}}
        </p>
      {%- endif -%}

      {%- if show_comments_count and article.comments_enabled? -%}
        <a href="#blog-post-comments" class="text-with-icon link-faded">
          {%- render 'icon' with 'blog-comment' -%}
          {{- 'blog.comments.count' | t: count: article.comments_count -}}
        </a>
      {%- endif -%}
    </div> -->
    <div class="article-meta-manda">
   {% for clr_imgg in article.metafields.custom.article_subtitle.value %}
                 

               <div class="article-meta-m">{{ clr_imgg }}</div>
        
    {% endfor %}
   
<!-- {% for clr_img in article.metafields.custom.hashtag.value %}
                 

               <div class="article-meta-m">{{ clr_img }}</div>
        
    {% endfor %} -->
<!-- <div class="article-meta-m">   {{ article.content | strip_html | truncate: 50 }}</div> -->
  </div>
  </div>


  {%- if article.metafields.custom.magazine_article_banner != blank -%}
    {%- capture sizes -%}(max-width: 1149px) 100vw, {% if layout == 'image_text_overlay' %}min({{ settings.page_width }}px, 100vw){% elsif layout == 'content_first' %}1000px{% else %}(max-width: 1399px) calc(100vw * 0.60 - 40px), calc(min({{ settings.page_width }}px, 100vw) * 0.60 - 64px){% endif %}{%- endcapture -%}
    <div class="article-banner__image">
     {% if article.metafields.custom.magazine_article_banner != blank %}     
  {% comment %}  {{- article.metafields.custom.magazine_article_banner | image_url: width: 1500 | image_tag: loading: 'lazy', sizes: sizes , class: 'desktop_banner_m', widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}} {% endcomment %}
    <img class="desktop_banner_m" src="{{ article.metafields.custom.magazine_article_banner | img_url: 'master' }}" width="auto" height="auto">
   {% endif %}
       {% if article.metafields.custom._magazine_article_banner_mobile != blank %}   
    {% comment %} {{- article.metafields.custom._magazine_article_banner_mobile | image_url: width: 1500 | image_tag: loading: 'lazy', sizes: sizes , class: 'mobile_banner_m', widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}} {% endcomment %}
  <img class="mobile_banner_m" src="{{ article.metafields.custom._magazine_article_banner_mobile | img_url: 'master' }}" width="auto" height="auto">
{% endif %}
    </div>
  {%- endif -%}


  
